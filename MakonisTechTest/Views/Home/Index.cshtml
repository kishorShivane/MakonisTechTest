@model IEnumerable<MakonisTechTest.Models.PersonViewModel>

@{
    ViewData["Title"] = "View all Person's";
}

<h1>View all Person's</h1>

<p>
    <a asp-action="AddPerson">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                @Html.HiddenFor(modelItem => item.Id)
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <a asp-action="DeletePerson" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?');">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">
                    Create a new person clicking on <a asp-action="AddPerson">Create New</a>
                </td>
            </tr>
        }
    </tbody>
</table>
